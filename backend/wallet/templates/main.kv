#:kivy 1.0
<MainScreen>:
    FloatLayout:
        Header:
            anchor_x: "center"
            anchor_y: "center"
            pos_hint: {"center_x": 0.5, "center_y": 0.95}
        Button:
            text: 'Restore'
            pos_hint: {"center_x": 0.33, "center_y": 0.75}
            size_hint: (0.15, 0.15)
            on_press: root.manager.current = 'login'
        Button:
            pos_hint: {"center_x": 0.66, "center_y": 0.75}
            size_hint: (0.15, 0.15)
            text: 'New Wallet'

<LoginScreen>:
    FloatLayout:
        Header:
            anchor_x: "center"
            anchor_y: "center"
            pos_hint: {"center_x": 0.5, "center_y": 0.95}

        Label:
            text: "Enter Passphrase"
            font_size: 32
            size_hint: (0.25, 0.25)
            pos_hint: {"center_x": 0.5, "center_y": 0.75}

        TextInput:
            id: input
            text: "cat doll already tribe helmet present maximum increase song club wrist rabbit"
            pos_hint: {"center_x": 0.5, "center_y": 0.68}
            size_hint: (0.75, None)
            height: 50

            on_text: app.set_passphrase(root.ids.input, root.ids.input.text)

        Button:
            id: submit
            text: "Submit"
            font_size: 32
            background_color: (0, 1, 0, 0.8)
            size_hint: (0.25, 0.10)
            pos_hint: {"center_x": 0.5, "center_y": 0.55}
            on_press: app.create_wallet(root.ids.submit)

<DashboardScreen>:
    BoxLayout:
        Button:
            text: app.data["name"]
            on_press: root.manager.current = 'send'
        Button:
            text: 'Receieve'
            on_press: root.manager.current = 'receive'

<SendScreen>:
    BoxLayout:
        Button:
            text: 'Goto Login'
            on_press: root.manager.current = 'login'
        Button:
            # text: app.data["name"]
            text: app.wallet

<ReceiveScreen>:
    BoxLayout:
        Button:
            text: 'Goto Login'
            on_press: root.manager.current = 'login'
        Button:
            text: 'Receiee'

<Header>:
    Label:
        text: "Sovereign Reserve Wallet"
        font_size: 48
        size_hint: (0.05, 0.05)
